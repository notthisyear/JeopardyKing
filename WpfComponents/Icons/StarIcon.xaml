          Width="30"
          Height="30">
        <Border.Background>
            <SolidColorBrush Color="White"
                             Opacity="0"/>
        </Border.Background>
        <Path Data="m 22.5 26.5 l -7.467 -5.488 l -7.467 5.488 l 2.867 -8.863 l -7.463 -5.453 h 9.214 l 2.849 -8.878 l 2.849 8.878 h 9.213 l -7.462 5.453 z"
              Fill="{Binding Path=FillColor}"
              Stroke="{Binding Path=StrokeColor}"
              StrokeThickness="{Binding Path=StrokeThickness}">
